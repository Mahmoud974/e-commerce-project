generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Canape {
  id            Int      @id @default(autoincrement())
  nom           String
  description   String
  prix          Float
  couleur       String[]
  largeur       String
  profondeur    String
  hauteur       String
  disponibilite Boolean
  image         String

  @@map("canapes") // Optionnel : cela permet de nommer la table dans la base de donn√©es
}
